{
  "name": "uendel-silveira/api-connection",
  "description": "Pacote de autenticação API para Laravel usando Passport",
  "type": "library",
  "keywords": [
    "laravel",
    "passport",
    "authentication",
    "api",
    "oauth2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Uendel Silveira",
      "email": "uendel.silveira@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "laravel/framework": "^10.0|^11.0",
    "laravel/passport": "^12.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "orchestra/testbench": "^8.0|^9.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.5"
  },
  "autoload": {
    "psr-4": {
      "UendelSilveira\\ApiConnection\\AuthApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "UendelSilveira\\ApiConnection\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
	"phpstan": "php -d memory_limit=2G ./vendor/bin/phpstan analyse -c phpstan.neon"
  },
  "extra": {
    "laravel": {
      "providers": [
        "UendelSilveira\\ApiConnection\\AuthApi\\AuthApiServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
